<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<!-- Wizard -->
        <record id="production_document_file_create_view_form" model="ir.ui.view">
            <field name="name">production.document.file.add.create</field>
            <field name="model">production.document.file.add</field>
            <field name="arch" type="xml">
                <form string="Pointages">
                    <sheet>
                        <group>
                            <field name="document_id" invisible="1"/>
                            <field name="filename" invisible="1"/>
                            <field name="file" filename="filename" widget="preview_file" />
                        </group>
                        <footer>
                            <button name="action_done" string="Valider" type="object" class="oe_highlight"/>
                            or
                            <button string="Annuler" class="oe_link" special="cancel" />
                       </footer>
                    </sheet>
                </form>
            </field>
        </record>
	</data>
</odoo>
