    <!-- Production report -->
    <template id="report_production_html">
        <t t-call="web.html_container">
               <div class="page" t-attf-style="font-size:14px;">
                    <div class="row mb-3">
                        <div class="col-6">
                            <strong>Date :</strong> <span><t t-esc="date"/></span>
                        </div>
                        <div class="col-6">
                            <strong>Affaire :</strong> <span><t t-esc="affaire_name"/></span>
                        </div>
                    </div>

                    <div class="row">
                        <!-- Première Table: LIVRABLES & TEMPS PASSES -->
                        <div class="col-8">
                            <table class="table table-bordered">
                                <thead>
                                   <tr>
                                        <th colspan="5" style="background-color: grey; text-align: center;">LIVRABLES</th>
                                        <th colspan="2" style="background-color: orange; text-align: center;">TEMPS PASSES</th>
                                    </tr>
                                    <tr>
                                        <th>MODELE</th>
                                        <th>PREV</th>
                                        <th>EXE</th>
                                        <th>IND</th>
                                        <th>%</th>
                                        <th>H. ING</th>
                                        <th>H. PROJ</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="documents" t-as="doc">
                                        <tr t-attf-class="#{
                                            'bg-success' if doc['prev'] > doc['exe'] else
                                            'bg-danger' if doc['exe'] > doc['prev'] else
                                            'bg-warning' }">
                                            <td><t t-esc="doc['name']"/></td>
                                            <td><t t-esc="doc['prev']"/></td>
                                            <td><t t-esc="doc['exe']"/></td>
                                            <td><t t-esc="doc['indice']"/></td>
                                            <td><t t-esc="doc['percentage']"/> %</td>
                                            <td><t t-esc="doc['hours_ing']"/></td>
                                            <td><t t-esc="doc['hours_proj']"/></td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>

                        <!-- Deuxième Table: Détails des heures -->
                        <div class="col-4">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th colspan="1" style="background-color: grey; text-align: center;">LIVRABLES</th>
                                        <th colspan="2" style="background-color: orange; text-align: center;">TEMPS PASSES</th>
                                    </tr>
                                    <tr>
                                        <th>Nom</th>
                                        <th>H. ING</th>
                                        <th>H. PROJ</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="times" t-as="doc">
                                        <tr>
                                            <td><t t-esc="doc['name']"/></td>
                                            <td><t t-esc="doc['hours_ing']"/></td>
                                            <td><t t-esc="doc['hours_proj']"/></td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- CSS amélioré -->
                <style>
                    /* Style pour les en-têtes de table */
                    thead {
                        background-color: #4CAF50; /* Vert */
                        color: white;
                    }
                    thead th {
                        padding: 12px;
                        text-align: center;
                        border: 2px solid #333;
                    }
                    tbody td {
                        text-align: center;
                        vertical-align: middle;
                        border: 1px solid;
                    }
                    /* Changement de couleur des lignes de la première table */
                    .bg-success {
                        background-color: #28a745 !important; /* Vert pour un bon résultat */
                    }
                    .bg-danger {
                        background-color: #dc3545 !important; /* Rouge pour un mauvais résultat */
                    }
                    .bg-warning {
                        background-color: #ffc107 !important; /* Jaune pour un résultat moyen */
                    }
                </style>
        </t>
    </template>
