<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!--   Inherit form view     -->
        <record id="partner_user_form" model="ir.ui.view">
            <field name="name">Inherit Partner Form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <button class="oe_stat_button" type="object" name="action_user_create_from_partner"
                        icon="fa-user-plus">Utilisateur
                    </button>
                    <button class="oe_stat_button" type="object" name="action_user_delete_from_partner"
                        icon="fa-trash">Utilisateur
                    </button>
                </div>
            </field>
        </record>
    </data>
</odoo>